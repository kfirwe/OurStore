<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.webp" type="image/webp">

    <title>By A Thread | Clothing Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">


    <style>
body {
  font-family: 'Poppins', sans-serif;
  height: 100%;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.cart-badge {
  position: absolute;
  top: -8px; /* Adjusts vertical position of the badge */
  right: -10px; /* Adjusts horizontal position of the badge */
  background-color: rgb(109, 156, 175); /* Red background for the badge */
  color: white; /* White text color for the badge */
  border-radius: 50%; /* Makes the badge circular */
  padding: 2px 6px; /* Padding inside the badge */
  font-size: 12px; /* Font size of the number */
  font-weight: bold; /* Makes the number bold */
  display: flex; /* Flexbox to center the text */
  justify-content: center; /* Centers the text horizontally */
  align-items: center; /* Centers the text vertically */
  min-width: 20px; /* Ensures the badge is at least 20px wide */
  height: 20px; /* Ensures the badge is 20px tall */
}


.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

footer {
  background-color: #333;
  color: white;
  text-align: center;
  padding: 10px 0;
  width: 100%;
  position: absolute;
  bottom: 0;
}

.container {
  min-height: 100vh; /* Make sure the content fills at least the height of the viewport */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* Navbar styles */
.navbar {
  background-color: #333;
}

.navbar a {
  color: white;
  padding: 14px 20px;
  text-decoration: none;
  text-align: center;
}

.navbar a:hover {
  background-color: #ddd;
  color: black;
}

/* Disable Profile and Cart links */
.navbar .disabled {
  color: grey;
  pointer-events: none;
}

/* Slider */
.slider {
  position: relative;
  height: 80vh;
  overflow: hidden;
}

.slider img,
.slider video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.slider .slides {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  animation: slide 12s infinite;
}

@keyframes slide {
  0% {
    transform: translateX(0);
  }
  33% {
    transform: translateX(-100%);
  }
  66% {
    transform: translateX(-200%);
  }
}

.slider .slide {
  min-width: 100%;
  transition: opacity 1s ease;
}

.centered-buttons {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.centered-buttons button {
  background-color: rgba(255, 255, 255, 0.267);
  border: none;
  border-radius: 5px;
  padding: 15px 30px;
  font-size: 50px;
  font-weight: bold;
  cursor: pointer;
  margin: 10px;
  transition: transform 0.3s;
}

.centered-buttons button:hover {
  transform: scale(1.1);
}

.navbar .nav-link i {
  margin-right: 5px; /* Reduce space between icon and text */
}

.navbar .nav-item {
  margin-left: 20px; /* Increase space between each tab */
}

    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
          <a class="navbar-brand d-flex align-items-center" href="/">
              <img src="/ByAThread.webp" alt="Logo" style="height: 40px; margin-right: 10px;" /> <!-- Adjust height as necessary -->
              By A Thread
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                  <!-- Homepage Link -->
                  <li class="nav-item">
                      <a class="nav-link" href="/homePage">
                          <i class="fas fa-home fa-lg"></i> Homepage
                      </a>
                  </li>
  
                  <!-- Show "Login" if not logged in, otherwise show "Logout" -->
                  <% if (!username) { %>
                  <li class="nav-item">
                      <a class="nav-link" href="/login">
                          <i class="fas fa-sign-in-alt fa-lg"></i> Login
                      </a>
                  </li>
                  <% } else { %>
                  <li class="nav-item">
                      <a class="nav-link" href="javascript:void(0);" onclick="handleLogout()">
                          <i class="fas fa-sign-out-alt fa-lg"></i> Logout
                      </a>
                  </li>
                  <% } %>
  
                  <!-- Disabled Profile and Cart Links if not logged in -->
                  <li class="nav-item">
                      <a class="nav-link <%= !username ? 'disabled' : '' %>" onclick="redirectToProfile()">
                          <i class="fas fa-user fa-lg"></i> Profile
                      </a>
                  </li>
                  <li class="nav-item position-relative">
                    <a class="nav-link" href="/cart" onclick="redirectToLoginIfNotLoggedIn()">
                      <i class="fas fa-shopping-cart fa-lg"></i> Cart
                      <% if (cartItemCount > 0) { %>
                        <span class="badge badge-danger cart-badge"><%= cartItemCount %></span>
                      <% } %>
                    </a>
                  </li>
  
                  <!-- Show Admin Tools if user is an admin -->
                  <% if (isAdmin) { %>
                  <li class="nav-item">
                      <a class="nav-link" href="/admin">
                          <i class="fas fa-tools fa-lg"></i> Admin Tools
                      </a>
                  </li>
                  <% } %>
              </ul>
          </div>
      </div>
  </nav>
  

    <!-- Main content wrapper -->
    <div class="content">
      <!-- Slider Section -->
      <div class="slider">
        <div class="slides">
          <!-- Slide 1 -->
          <div class="slide">
            <img src="1.jpg" alt="Image 1" />
          </div>
          <!-- Slide 2 -->
          <div class="slide">
            <video src="2.mp4" autoplay muted loop></video>
          </div>
          <!-- Slide 3 -->
          <div class="slide">
            <img src="3.png" alt="Image 3" />
          </div>
          <!-- Slide 4 -->
          <div class="slide">
            <img src="4.png" alt="Image 4" />
          </div>
        </div>

        <!-- Centered Buttons -->
        <div class="centered-buttons">
          <button onclick="redirectToFilteredPage('male')">Man</button>
          <button onclick="redirectToFilteredPage('female')">Woman</button>
          <button onclick="redirectToFilteredPage('unisex')">Unisex</button>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('_footer') %>

    <script>

      function redirectToFilteredPage(gender) {
        // Redirect to the home page with the selected gender filter
        window.location.href = `/homePage?gender=${gender}`;
      }

      function handleLogout() {
        // Perform logout operation
        fetch('/logout', {
          method: 'GET',
          credentials: 'same-origin'
        })
        .then(response => {
          if (response.redirected) {
            window.location.href = response.url;
          }
        })
        .catch(error => {
          console.error('Error during logout:', error);
          alert('An error occurred while logging out.');
        });
      }

      // Redirect to login if not logged in
      function redirectToLoginIfNotLoggedIn() {
        <% if (!username) { %>
          window.location.href = "/login";
        <% } %>
      }


      // Redirect to profile or login if not logged in
      function redirectToProfile() {
        <% if (!username) { %>
              window.location.href = '/login'; // Redirect to login if not authenticated
        <% } else { %>
              window.location.href = '/profile'; // Redirect to the profile page if logged in
        <% } %>
      }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>