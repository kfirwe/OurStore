<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" href="/favicon.webp" type="image/webp" />
    <title>Forgot Password</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
    <!--Stylesheet-->
    <style>
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }
      body {
        background-color: #fdffff;
      }

      /* Add styles for the navigation bar */
      .navbar {
        background-color: #333;
      }

      .navbar a {
        color: white;
        padding: 14px 20px;
        text-decoration: none;
        text-align: center;
      }

      .navbar a:hover {
        background-color: #ddd;
        color: black;
      }

      .form-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px; /* Adjust the width of the form */
      }

      form {
        height: 420px;
        width: 100%; /* Let the form fill the container width */
        background-color: rgba(255, 255, 255, 0.13);
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        padding: 50px 35px;
      }

      form * {
        font-family: "Poppins", sans-serif;
        color: #052133;
        letter-spacing: 0.5px;
        outline: none;
        border: none;
      }
      form h3 {
        font-size: 28px;
        font-weight: 500;
        text-align: center;
      }

      label {
        display: block;
        margin-top: 25px;
        font-size: 16px;
        font-weight: 500;
      }
      input {
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(207, 225, 248, 0.7);
        border-radius: 3px;
        padding: 0 10px;
        margin-top: 8px;
        font-size: 14px;
        font-weight: 300;
      }
      button {
        margin-top: 25px;
        width: 100%;
        background-color: rgba(207, 225, 248, 0.7);
        color: #0c0c3a;
        padding: 15px 0;
        font-size: 18px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
      }

      .message {
        text-align: center;
        padding: 15px;
        display: none;
        margin-top: 10px;
        border-radius: 5px;
      }

      .success {
        background-color: #f0fff4;
        color: #2f855a;
      }

      .error {
        background-color: #fff5f5;
        color: #e53e3e;
      }
    </style>
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="/">
          <img
            src="/ByAThread.webp"
            alt="Logo"
            style="height: 40px; margin-right: 10px"
          />
          By A Thread
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/homePage">
                <i class="fas fa-home fa-lg"></i> Home
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="fas fa-flag fa-lg"></i> Landing Page
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">
                <i class="fas fa-info-circle fa-lg"></i> About
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="form-container">
      <form id="forgotPasswordForm">
        <h3>Forgot Password</h3>
        <label for="username">Enter your username:</label>
        <input type="text" name="username" required />

        <label for="email">Enter your email address:</label>
        <input type="email" name="email" required />

        <button type="submit">Send Password Reset Email</button>

        <!-- Success message -->
        <div id="successMessage" class="message success">
          Password reset email has been sent to your inbox. Please check your
          email.
        </div>

        <!-- Error message -->
        <div id="errorMessage" class="message error">
          There was a problem sending the email. Please try again.
        </div>
      </form>
    </div>

    <script>
      const form = document.getElementById("forgotPasswordForm");
      const successMessage = document.getElementById("successMessage");
      const errorMessage = document.getElementById("errorMessage");

      form.addEventListener("submit", async function (event) {
        event.preventDefault();
        const formData = new FormData(form);
        const email = formData.get("email");
        const username = formData.get("username");

        try {
          const response = await fetch("/forgot-password", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email, username }),
          });

          const data = await response.json();

          if (response.ok) {
            successMessage.style.display = "block";
            errorMessage.style.display = "none";
          } else {
            successMessage.style.display = "none";
            errorMessage.style.display = "block";
          }
        } catch (error) {
          console.error("Error:", error);
          successMessage.style.display = "none";
          errorMessage.style.display = "block";
        }
      });
    </script>
  </body>
</html>
