<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" href="/favicon.webp" type="image/webp" />
    <title>Reset Password</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap"
      rel="stylesheet"
    />
    <!--Stylesheet-->
    <style>
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }
      body {
        background-color: #fdffff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: "Poppins", sans-serif;
      }
      .background {
        width: 430px;
        height: 520px;
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
      }
      h1 {
        font-size: 32px;
        font-weight: 600;
        text-align: center;
        color: #052133;
        margin-bottom: 20px;
      }
      form {
        width: 400px;
        background-color: rgba(255, 255, 255, 0.13);
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
        padding: 50px 35px;
        text-align: center;
      }
      form h3 {
        font-size: 28px;
        font-weight: 500;
        margin-bottom: 20px;
        color: #052133;
      }
      label {
        display: block;
        margin-top: 25px;
        font-size: 16px;
        font-weight: 500;
        color: #052133;
        text-align: left;
      }
      input {
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(207, 225, 248, 0.7);
        border-radius: 3px;
        padding: 0 10px;
        margin-top: 8px;
        font-size: 14px;
        font-weight: 300;
      }
      button {
        margin-top: 25px;
        width: 100%;
        background-color: rgba(207, 225, 248, 0.7);
        color: #0c0c3a;
        padding: 15px 0;
        font-size: 18px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s;
      }
      button:hover {
        background-color: rgba(207, 225, 248, 0.9);
      }

      /* Success and Error Message Styling */
      .message {
        text-align: center;
        padding: 15px;
        display: none;
        margin-top: 10px;
        border-radius: 5px;
      }
      .success {
        background-color: #f0fff4;
        color: #2f855a;
      }
      .error {
        background-color: #fff5f5;
        color: #e53e3e;
      }
    </style>
  </head>
  <body>
    <div class="background"></div>

    <!-- Form for resetting password -->
    <form id="resetPasswordForm">
      <h1>Reset Password</h1>
      <div>
        <label for="newPassword">New Password:</label>
        <input type="password" name="password" required />
      </div>
      <div>
        <label for="confirmPassword">Confirm New Password:</label>
        <input type="password" name="confirmPassword" required />
      </div>
      <!-- Hidden input to pass email -->
      <input type="hidden" name="email" value="<%= email %>" />
      <input type="hidden" name="username" value="<%= username %>" />

      <button type="submit">Reset Password</button>

      <!-- Success Message -->
      <div id="successMessage" class="message success">
        Your password has been successfully reset! You can now log in.
      </div>

      <!-- Error Message -->
      <div id="errorMessage" class="message error">
        There was a problem resetting your password. Please try again.
      </div>
    </form>

    <script>
      const form = document.getElementById("resetPasswordForm");
      const successMessage = document.getElementById("successMessage");
      const errorMessage = document.getElementById("errorMessage");

      form.addEventListener("submit", async function (event) {
        event.preventDefault();

        const formData = new FormData(form);
        const password = formData.get("password");
        const confirmPassword = formData.get("confirmPassword");
        const email = formData.get("email");
        const username = formData.get("username");

        if (password !== confirmPassword) {
          errorMessage.textContent = "Passwords do not match.";
          errorMessage.style.display = "block";
          successMessage.style.display = "none";
          return;
        }

        try {
          const response = await fetch("/reset-password/<%= token %>", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              password,
              confirmPassword,
              email,
              username,
            }),
          });

          if (!response.ok) {
            const errorData = await response.json();
            errorMessage.textContent =
              errorData.message || "Password reset failed.";
            errorMessage.style.display = "block";
            successMessage.style.display = "none";
          } else {
            const successData = await response.json();
            successMessage.textContent = successData.message;
            successMessage.style.display = "block";
            errorMessage.style.display = "none";
          }
        } catch (error) {
          console.error("Error:", error);
          errorMessage.textContent = "Server error. Please try again.";
          errorMessage.style.display = "block";
          successMessage.style.display = "none";
        }
      });
    </script>
  </body>
</html>
